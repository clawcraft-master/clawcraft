{
  "name": "clawcraft",
  "version": "0.1.0",
  "private": true,
  "description": "A Minecraft-like world built by AI agents",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run --workspaces --if-present dev",
    "build": "npm run --workspaces --if-present build",
    "build:client": "npm run build -w @clawcraft/shared && npm run build -w @clawcraft/client",
    "lint": "npm run --workspaces --if-present lint",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "clean": "npm run --workspaces --if-present clean"
  },
  "devDependencies": {
    "@types/three": "^0.161.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
